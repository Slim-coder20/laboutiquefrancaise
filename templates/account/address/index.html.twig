{% extends "base.html.twig" %}

{% block body %}
	<div class="container my-5">
		<h1 class="text-primary fw-bold">Espace Membre</h1>

		<div
			class="row ">
			<!-- Menu de navigation -->
			<div class="col-md-3">
				{% include "account/_menu.html.twig" %}
			</div>

			<!-- Contenu principal -->
			<div class="col-md-9">
				<div class="d-flex justify-content-between align-items-center py-3">
					<h5 class="mb-0 text-primary fw-bold">Mes adresses</h5>
					<a href="{{ path('app_account_adress_form') }}" class="btn btn-primary d-flex align-items-center">
						<i class="fas fa-plus me-2 "></i>
						Ajouter une adresse
					</a>
				</div>

				{% if app.user.adresses|length == 0 %}
					<p class="text-muted">Vous n'avez pas encore enregistré d'adresse sur la boutique.</p>
				{% else %}
					<div class="row g-4">
						{% for adress in app.user.adresses %}
							<div class="col-md-6">
								<div class="card shadow-sm border-0 p-3">
									<div class="card-body">
										<h6 class="card-title fw-bold text-dark">{{ adress.firstname }}
											{{ adress.lastname }}</h6>
										<p class="card-text text-muted">
											{{ adress.adress }}<br>
											{{ adress.postal }},
											{{ adress.city }}<br>
											{{ adress.country }}
										</p>
										<div class="d-flex justify-content-between">
											<a href="{{ path('app_account_adress_form', { id : adress.id})}}" class="btn btn-primary text-white">
												<i class="fas fa-edit"></i>
												Éditer
											</a>
											<a href="{{ path('app_account_adress_delete', { id : adress.id})}}" class="btn btn-danger text-white">
												<i class="fas fa-trash-alt"></i>
												Supprimer
											</a>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
