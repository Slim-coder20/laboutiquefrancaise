{% extends 'base.html.twig' %}


{% block body %}
	<div class="container my-5 ">
		<h1>Mon panier</h1>
		<div class="row">
			<div class="col-md-8">

				{% for product in cart %}
					<div class="row mt-3">
						<div class="col-md-2">
							<img src="/uploads/{{product.object.illustration}}" class="img-fluid" alt="{{product.object.name}}">
						</div>
						<div class="col-md-6">
							<strong>{{product.object.name}}</strong>
							<span class="d-block small ">Prix unitaire:
								{{ product.object.priceWt|price}}</span>
						</div>
						<div class="col-md-2 text-right">
							{{product.qty}}
						</div>
						<div class="col-md-2">
							<strong>{{ (product.qty * product.object.priceWt)|price}}</strong>
						</div>

					</div>
					</div>
				{% endfor %}


			
			
